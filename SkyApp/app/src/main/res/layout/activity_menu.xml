<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F2F1"
    tools:context="com.bootcamp.skyapp.MainMenu">

    <TextView
        android:id="@+id/helloUser"
        android:text="@string/hello_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:visibility="invisible"
        >

        <com.ogaclejapan.arclayout.ArcLayout
            android:id="@+id/arc_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:arc_origin="center"
            app:arc_radius="168dp"
            app:arc_axisRadius="120dp"
            app:arc_freeAngle="true"
            app:arc_reverseAngle="false"
            >

            <ImageButton
                android:id="@+id/reward"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="@drawable/reward"
                android:onClick="toggleLayout"
                app:arc_origin="center"
                app:arc_angle="0"
                />

            <ImageButton
                android:id="@+id/location"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="@drawable/location"
                android:onClick="toggleLayout"
                app:arc_origin="center"
                app:arc_angle="72"
                />

            <ImageButton
                android:id="@+id/account"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="@drawable/account"
                android:onClick="toggleLayout"
                app:arc_origin="center"
                app:arc_angle="144"
                />

            <ImageButton
                android:id="@+id/info"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="@drawable/info"
                android:onClick="toggleLayout"
                app:arc_origin="center"
                app:arc_angle="216"
                />

            <ImageButton
                android:id="@+id/logout"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="@drawable/padlock"
                android:onClick="toggleLayout"
                app:arc_origin="center"
                app:arc_angle="288"
                />

        </com.ogaclejapan.arclayout.ArcLayout>

    </FrameLayout>

    <ImageButton
        android:id="@+id/fab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selectorplay"
        android:onClick="toggleLayout"
        />
</RelativeLayout>
