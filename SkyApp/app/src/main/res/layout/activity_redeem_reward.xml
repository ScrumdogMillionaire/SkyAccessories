<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F2F1"
    tools:context="com.bootcamp.skyapp.RedeemReward">

    <ImageView
        android:id="@+id/skylogo"
        android:layout_width="180dp"
        android:layout_marginTop="20dp"
        android:layout_height="110dp"
        android:background="@drawable/skylogo"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/accounttitle"
        android:text="Redeem Your Reward"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/skylogo"
        android:textSize="35sp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button1"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/middle"
        android:onClick="sendEmail"
        android:layout_marginTop="210dp"
        android:background="@drawable/freefilmx"
        />

    <Button
        android:id="@+id/button2"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
       android:layout_toRightOf="@id/middle"
        android:layout_marginLeft="10dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="210dp"
        android:onClick="sendEmail"
        android:background="@drawable/nowtvx"
        />

        <Button
            android:id="@+id/button3"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_width="150dp"
            android:layout_toLeftOf="@id/middle"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_height="150dp"
            android:layout_below="@id/button1"
            android:onClick="sendEmail"
            android:background="@drawable/sportx"
            />

        <Button
            android:layout_centerHorizontal="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/middle"/>

        <Button
            android:id="@+id/button4"
            android:textColor="#FFFFFF"
            android:layout_below="@id/button1"
            android:textSize="24sp"
            android:layout_toRightOf="@id/middle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:onClick="sendEmail"
            android:layout_marginLeft="10dp"
            android:background="@drawable/giftcardx"
            />

        <TextView
            android:id="@+id/text1"
            android:layout_width="150dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#FF8E3A"
            android:textStyle="bold"
            android:layout_marginTop="-35dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button1"
            android:layout_toLeftOf="@id/middle"
            android:text="1000 points"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="150dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#FF8E3A"
        android:textStyle="bold"
        android:layout_marginTop="-35dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button2"
        android:layout_toRightOf="@id/middle"
        android:text="2000 points"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="150dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#FF8E3A"
        android:textStyle="bold"
        android:layout_marginTop="-35dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button3"
        android:layout_toLeftOf="@id/middle"
        android:text="4000 points"/>

    <TextView
        android:id="@+id/text4"
        android:layout_width="150dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#FF8E3A"
        android:textStyle="bold"
        android:layout_marginTop="-35dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button4"
        android:layout_toRightOf="@id/middle"
        android:text="8000 points"/>



</RelativeLayout>
