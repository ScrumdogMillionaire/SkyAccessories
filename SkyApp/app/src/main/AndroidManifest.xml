<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bootcamp.skyapp" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name=".LandingActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".Signup"
            android:label="@string/title_activity_signup" >
        </activity>
        <activity
            android:name=".MainMenu"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name=".RedeemReward"
            android:label="@string/title_activity_redeem_reward" >
        </activity>
        <activity
            android:name=".LocalStore"
            android:label="@string/title_activity_local_store" >
        </activity>
        <activity
            android:name=".AccountPage"
            android:label="@string/title_activity_account_page" >
        </activity>
    </application>

</manifest>
